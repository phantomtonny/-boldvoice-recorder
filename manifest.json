{
  "manifest_version": 3,
  "name": "BoldVoice Recorder",
  "version": "0.1.0",
  "description": "Bold Voiceで判定すると同時に音声を録音して保存する拡張",
  "permissions": [
    "downloads",
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.boldvoice.com/*",
    "https://boldvoice.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.boldvoice.com/*",
        "https://boldvoice.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
