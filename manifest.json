{
  "manifest_version": 3,
  "name": "BoldVoice Recorder",
  "version": "0.2.4",
  "description": "Bold Voiceで判定すると同時に音声を録音して保存する拡張",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://*.boldvoice.com/*",
    "https://boldvoice.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "BoldVoice Recorder Dashboard"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.boldvoice.com/*",
        "https://boldvoice.com/*"
      ],
      "js": ["content-new.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; style-src 'self' 'unsafe-inline';"
  }
}
